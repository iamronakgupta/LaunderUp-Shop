<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.launderup.launderupshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_square"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LaunderUpShop">

        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.view.NewOrderActivity"/>
        <activity android:name=".ui.view.ProfileUpdateActivity" />
        <activity android:name=".ui.view.FragmentNavigationActivity" />
        <activity android:name=".ui.view.ContractActivity"/>
        <activity android:name=".ui.view.LegalDocumentsActivity"/>
        <activity android:name=".ui.view.ShopTypeClothsActivity"/>
        <activity android:name=".ui.view.ShopTimingsActivity" />
        <activity android:name=".ui.view.ShopInformation"/>
        <activity android:name=".ui.view.VerificationCodeActivity"/>
        <activity android:name=".ui.view.LoginActivity"/>

    </application>

</manifest>