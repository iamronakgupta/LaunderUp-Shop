<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.InventoryFragment"
    android:background="@color/blue_0">

    <TextView
        android:id="@+id/inventory_tv"
        style="@style/Heading2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/inventory"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/inventory_nv"
        app:layout_constraintTop_toBottomOf="@+id/inventory_tv"
        app:layout_constraintBottom_toTopOf="@id/next_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:layout_gravity="fill_vertical">

            <TextView
                android:id="@+id/mens_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mens"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:background="@color/blue_4"
                android:textColor="@color/black_2"
                android:paddingStart="20dp"

                />


            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/mens_types_cloths_input_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/mens_tv"/>

            <TextView
                android:id="@+id/women_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/womens"
                app:layout_constraintTop_toBottomOf="@+id/mens_types_cloths_input_rv"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:background="@color/blue_4"
                android:textColor="@color/black_2"
                android:paddingStart="20dp"
                android:layout_marginTop="10dp"
                />


            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/women_types_cloths_input_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/women_tv"/>

            <TextView
                android:id="@+id/kids_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kids"
                app:layout_constraintTop_toBottomOf="@+id/women_types_cloths_input_rv"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:background="@color/blue_4"
                android:textColor="@color/black_2"
                android:paddingStart="20dp"
                android:layout_marginTop="10dp"
                />


            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/kids_types_cloths_input_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/kids_tv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/next_button"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/update"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>